<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>

    <record id="islr_voucher_report" model="ir.actions.report">
        <field name="name">Comprobante Retención ISLR</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tax_reports.islr_voucher</field>
        <field name="report_file">tax_reports.islr_voucher</field>
        <field name="print_report_name">'Comprobante ISLR - %s' % (object.name)</field>
    </record>

    <record id="iva_voucher_report" model="ir.actions.report">
        <field name="name">Comprobante Retención IVA</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tax_reports.iva_voucher</field>
        <field name="report_file">tax_reports.iva_voucher</field>
        <field name="print_report_name">'Comprobante IVA - %s' % (object.name)</field>
        <field name="paperformat_id" ref="voucher_iva_paperformat"/>
    </record>

    <record id="iva_txt_report" model="ir.actions.report">
        <field name="name">Reporte txt IVA</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="report_type">qweb-text</field>
        <field name="report_name">tax_reports.iva_txt</field>
        <field name="report_file">tax_reports.iva_txt</field>
        <field name="print_report_name">'Reporte_txt_IVA-%s' % (object.name)</field>
    </record>

    <record id="sales_book_report" model="ir.actions.report">
        <field name="name">Libro de Ventas</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tax_reports.sales_book</field>
        <field name="report_file">tax_reports.sales_book</field>
        <field name="print_report_name">'Libro_Ventas_%s' % (object.name)</field>
        <field name="paperformat_id" ref="voucher_iva_paperformat"/>
    </record>

    <record id="purchase_book_report" model="ir.actions.report">
        <field name="name">Libro de Compras</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tax_reports.purchase_book</field>
        <field name="report_file">tax_reports.purchase_book</field>
        <field name="print_report_name">'Libro_Compras_%s' % (object.name)</field>
        <field name="paperformat_id" ref="voucher_iva_paperformat"/>
    </record>

  </data>
</odoo>